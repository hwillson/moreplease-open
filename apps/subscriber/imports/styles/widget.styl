body
  -webkit-font-smoothing antialiased

.widget.subscription.container
  margin 0

.widget.subscription
  font-family 'Source Sans Pro', 'sans-serif'
  color #5c6b80
  a
    color #273b4d
  a:hover, a:focus
    color #18242f
  p
    margin 5px
  h1
    color $colorTitle
    font-weight 700
    font-size 1.125em
    margin-bottom 20px
    margin-top 18px
    border-bottom 1px solid #D4E0EC
    padding-bottom 5px
    line-height 1.4em
    text-rendering optimizelegibility
    letter-spacing 0
  h2
    font-size 16px
    font-weight bold
  table
    border 1px solid #D4E0EC
    border-collapse separate
    width 100%
    margin-bottom 0
    th
      background-color #F9FAFC
      font-weight 100
      color #848E97
      text-align left
      padding 15px 10px
      border-bottom none
    td
      border-top 1px solid #D4E0EC
      border-bottom none
      padding 10px
      vertical-align middle
    th:last-child, td:last-child
      padding-right 20px
    .box-item-image
      text-align center
      img
        max-height 100px
    .sub-item-quantity
      text-align center
    .sub-item-price
      text-align right
    .sub-total
      font-size 16px
    .sub-shipping
      font-size 14px
    p
      margin 5px 0
  .subscription-details
    margin-bottom 20px
    .sub-status
      color #FFF
      border-radius 2px
      padding 1px 7px 2px 7px
      text-transform uppercase
      font-weight bold
      margin-right 5px
    .sub-active
      background-color #5cb85c
    .sub-paused
      background-color #f0ad4e
    .sub-failed
      background-color #a94442
    .sub-controls
      white-space nowrap
      line-height 25px
    table
      th
        width 35%
        vertical-align middle
        border none
        font-weight bold
      .sub-th-sub-status
        vertical-align top
      .sub-th-next-ship-date
        vertical-align top
        padding-top 15px
      td
        border none
    .sub-ship-message
      margin-top 5px
  .sub-item
    margin-bottom 20px
    border-bottom 1px solid #d4e0ec
    padding-bottom 10px
    p
      margin 5px 0
    img
      max-height 100px
  .sub-item:first-child
    border-top 1px solid #d4e0ec
    padding-top 20px
  .sub-message
    border 1px solid #D4E0EC
    background-color #F1F2F4
    padding 10px 20px 5px 20px
    border-radius 5px
    ul
      margin 10px 0
      padding-left 20px
      li
        margin 0

.sweet-alert.mp-widget
  h2
    margin 15px 0
  button
    line-height inherit
    height inherit
    margin 10px 5px
  button.cancel
    background-color #5cb85c
  button.cancel:hover, button.cancel:active
    background-color #6CBF6C
  .sa-icon
    margin 10px auto

.alert-info
  border-color #D4E0EC
  background-color #F1F2F4
  color #5c6b80
  ul
    padding-left 20px

.u-hide
  display none

.spinner
  width 60px
  margin 0 auto

.spinner input
  text-align right

.input-group-btn-vertical
  position relative
  white-space nowrap
  width 1%
  vertical-align middle
  display table-cell
  .btn
    display block
    float none
    width 100%
    max-width 100%
    padding 8px
    margin-left -1px
    position relative
    border-radius 0
  .btn:first-child
    border-top-right-radius 4px
  .btn:last-child
    margin-top -2px
    border-bottom-right-radius 4px
  i
    position absolute
    top 0
    left 4px

.subscription-item-image, .sub-item-image
  img
    max-height 100px
    max-width 100px
